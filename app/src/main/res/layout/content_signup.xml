<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorcompanyblue"
    android:padding="@dimen/padding_logo"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding_50"
        android:src="@drawable/earthenservices"
        android:layout_margin="@dimen/logo_margin"
        android:id="@+id/logo"/>


    <android.support.v7.widget.AppCompatEditText
        android:layout_height="wrap_content"
        android:layout_width="@dimen/layout_zero"
        android:hint="First Name"
        android:id="@+id/firstname"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/lastname"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@+id/logo"
        />

    <android.support.v7.widget.AppCompatEditText
        android:layout_height="wrap_content"
        android:layout_width="@dimen/layout_width"
        android:hint="Last Name"
        android:id="@+id/lastname"
        android:layout_alignParentRight="true"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@+id/logo"
        />

    <android.support.v7.widget.AppCompatEditText
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Email"
        android:id="@+id/email"
        android:layout_below="@id/lastname"
        android:textColorHint="@color/colorAccent"
        />

    <android.support.v7.widget.AppCompatEditText
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Phone"
        android:id="@+id/phone"
        android:layout_below="@id/email"
        android:textColorHint="@color/colorAccent"
        />

    <android.support.v7.widget.AppCompatEditText
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Password"
        android:id="@+id/pass"
        android:layout_below="@id/phone"
        android:inputType="textVisiblePassword"
        android:textColorHint="@color/colorAccent"
        />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnCreateAccount"
        android:textColor="@color/colorAccent"
        android:id="@+id/btnSignup"
        android:layout_below="@+id/pass"
        android:background="@color/colorcompanyyellow"
        />


</RelativeLayout>